{
  "manifest_version": 3,
  "name": "API Monitor",
  "version": "1.0.0",
  "description": "监控所有API请求（GET/POST/PUT/DELETE等）的请求内容和响应内容，支持Mock响应",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js", "sidepanel.html", "sidepanel.css", "sidepanel.js", "floating-panel.js", "floating-panel.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "API Monitor",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
